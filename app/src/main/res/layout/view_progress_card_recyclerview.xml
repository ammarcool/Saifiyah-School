<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:id="@+id/expandCard"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/myRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greencard_bg"
        android:paddingBottom="10dp">

        <!--<ImageView-->
            <!--android:id="@+id/progress_img_bg"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:src="@drawable/greencard_bg" />-->

        <!--<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--xmlns:tools="http://schemas.android.com/tools"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->


        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_drawable"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/progressViewDate"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/progressViewMonth"
            android:layout_below="@+id/progressViewMonth"
            android:text="07"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progressViewMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/progressStudentName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="Feb"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/progressStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginStart="97dp"
            android:layout_weight="1.8"
            android:gravity="left"
            android:text="Ammar Miyaji"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/drop_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressViewDate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_weight="0.2"
            android:gravity="right"
            app:srcCompat="@drawable/drop_down" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/progressStudentName"
            android:layout_weight="1"
            android:text="Card Status:"
            android:textColor="#8FFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/noOfCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignEnd="@+id/drop_down_icon"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Reward"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/progressClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/progressStudentName"
            android:layout_centerVertical="true"
            android:layout_weight="0.6"
            android:text="Class"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/studentProgressLine"
            android:layout_width="178dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="85dp"
            android:layout_weight="1.2"
            android:src="@drawable/design_line" />

        <TextView
            android:id="@+id/studentProgressClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/drop_down_icon"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fifth A"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/progressDescription"
            android:layout_width="296dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="127dp"
            android:layout_weight="2"
            android:background="@drawable/my_edittext_bg2"
            android:padding="8dp"
            android:text="Description"
            android:textSize="14sp"
            android:textStyle="bold|italic" />


        <!--</android.support.design.widget.CoordinatorLayout>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>