<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >

        <ImageView
            android:id="@+id/leave_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dashboard_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="70dp"
                        android:layout_height="65dp"
                        android:background="@drawable/rounded_drawable"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/leaveBalanceDate"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:text="07"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/ctMonth"
                        app:layout_constraintEnd_toEndOf="@+id/textView9"
                        app:layout_constraintHorizontal_bias="0.484"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/leaveBalanceMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Feb"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView9"
                        app:layout_constraintEnd_toEndOf="@+id/textView9"
                        app:layout_constraintHorizontal_bias="0.48"
                        app:layout_constraintStart_toStartOf="@+id/textView9" />


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.8"
            tools:ignore="UselessLeaf"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_margin="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1.5">



                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/teacherLeaveBalFromDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="15/10/2018"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"
                        android:gravity="right"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:background="#cc3f3f3f"
                        tools:ignore="NestedWeights"
                        android:layout_gravity="center_horizontal">

                    </View>

                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/teacherLeaveBalToDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="20/10/2018"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"
                        android:gravity="right"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#cc3f3f3f"
                    tools:ignore="NestedWeights"
                    android:layout_gravity="center_horizontal">

                </View>

            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="No. of Leaves"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/noOfLeavesBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="03"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"
                        android:gravity="right"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#cc3f3f3f"
                    tools:ignore="NestedWeights"
                    android:layout_gravity="center_horizontal">

                </View>

            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Type Of Leave"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/typesOfLeavesStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Casual Leave"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"
                        android:gravity="right"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#cc3f3f3f"
                    tools:ignore="NestedWeights"
                    android:layout_gravity="center_horizontal">

                </View>

            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="1.4"/>

                    <TextView
                        android:id="@+id/teacherLeavestatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textColor="#ffffff"
                        android:background="#79C28A"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_weight="0.6"
                        android:gravity="center"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
     
</android.support.v7.widget.CardView>
