<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/leaveNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:text="01." />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/leaveNo"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-32dp"
            android:layout_marginStart="54dp"
            android:text="No. of Leaves"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/leaveMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/leaveNo"
            android:layout_marginTop="-5dp"
            android:text="March 2018" />

        <TextView
            android:id="@+id/leaveDay"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="07dp"
            android:background="@drawable/rounded_drawable"
            android:gravity="center"
            android:text="02"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>