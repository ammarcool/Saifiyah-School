<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/testSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/leaveDay"
            android:layout_marginStart="105dp"
            android:text="Hindi"
            android:textColor="#888690"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/leaveDay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_drawable"
            android:gravity="center"
            android:text="Feb"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/dateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/testSubject"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp"
            android:text="18"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/leaveDay"
            android:layout_alignStart="@+id/testSubject"
            android:text="Ammar Miyaji"
            android:textColor="#888690" />

        <com.hookedonplay.decoviewlib.DecoView
            android:id="@+id/dynamicArcView"
            android:layout_width="76dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="8dp"
            app:dv_arc_gravity_vertical="Center" />

        <View
            android:layout_width="3dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-68dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/testMarks"
            android:background="#000000"
            android:rotation="35" />


        <TextView
            android:id="@+id/testMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/dateNumber"
            android:layout_marginEnd="66dp"
            android:text="10"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totalMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-63dp"
            android:layout_marginStart="-63dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/testMarks"
            android:layout_toRightOf="@+id/testMarks"
            android:text="50"
            android:textSize="18sp"
            tools:ignore="UnknownId" />

    </RelativeLayout>


</android.support.v7.widget.CardView>