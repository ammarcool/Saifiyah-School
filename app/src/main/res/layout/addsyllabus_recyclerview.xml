<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/mylin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingTop="6dp"
            >


            <TextView
                android:id="@+id/syllabusTopicNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="01"
                android:layout_weight="0.8"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/syllabusChapterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="16sp"
                android:text="Ammar Miyaji"
                android:background="@drawable/my_edittext_bg3"
                app:layout_constraintStart_toEndOf="@+id/studentNo"
                android:padding="10dp"/>



        </LinearLayout>


        <View
            android:id="@+id/nextLIne"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#8a8a8a"
            app:layout_constraintTop_toBottomOf="@+id/mylin"
            tools:ignore="MissingConstraints,SmallSp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="5dp">

        </View>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>