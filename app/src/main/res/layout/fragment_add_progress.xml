<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teachers.Progress.addProgress"
    android:orientation="vertical"
    android:weightSum="4.6"
    android:padding="10dp"
    android:background="@drawable/blur_bg">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Select Class"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <Spinner
            android:id="@+id/chooseClass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg2"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Choose Student"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <Spinner
            android:id="@+id/chooseStudent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg2"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Choose Progress"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <RadioGroup
            android:id="@+id/progressRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rewardRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Rewards"

                />

            <RadioButton
                android:id="@+id/complainRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Complain"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Reason"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <EditText
            android:id="@+id/progressReason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg2"
            android:layout_weight="2.5"
            android:gravity="top"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:layout_marginBottom="5dp"
        android:id="@+id/submitProgress"
        android:layout_marginTop="6dp"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:text="Submit Progress"
        android:textSize="20sp"
        android:layout_weight="0.5"
        android:background="@drawable/leavesubmitbutton"
        android:textColor="#C09863"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>