<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialoglayout"
    android:layout_width="match_parent"
    android:background="#99706565"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Add Syllabus TextBox"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/numberOfTopic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg3"
            android:layout_weight="1"
            android:hint="Enter number our here"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="@drawable/my_edittext_bg"
        android:orientation="vertical"
        android:weightSum="5"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="Enter Chapter Names"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#478A7F"
            tools:ignore="NestedWeights" />
        <View
            android:id="@+id/nextLIne"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="#8a8a8a"
            android:layout_marginBottom="5dp">
        </View>

        <!--<View-->
            <!--android:layout_width="2sp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity=""-->
            <!--android:layout_marginLeft=""-->
            <!--android:background="#645e5e"-->
            <!--android:layout_below="@+id/nextLIne"-->
            <!--/>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/addTopicRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:scrollbars="vertical"
            />
            <!--<include layout="@layout/addsyllabus_recyclerview"> </include>-->


    </LinearLayout>

    <Button
        android:id="@+id/submitTopicButton"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.45"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/book"
        android:includeFontPadding="false"
        android:text="Add Syllabus"
        android:textStyle="normal|italic"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

</LinearLayout>