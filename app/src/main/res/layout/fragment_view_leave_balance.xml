<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".teachers.LeaveBalance.viewLeaveBalance"
    android:orientation="vertical"
    android:weightSum="5">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <com.hookedonplay.decoviewlib.DecoView
                    android:id="@+id/mydynamicArcView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.1"
                        android:orientation="vertical"
                        android:weightSum="10">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6.5"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Remaining"
                            android:textSize="10sp"
                            android:gravity="right"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="06"
                            android:textColor="#C09863"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:gravity="right"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>

                        <View
                            android:id="@+id/view"
                            android:layout_width="2dp"
                            android:layout_height="45dp"
                            android:background="#000000"
                            android:rotation="22"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:backgroundTint="#707070"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.6"/>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out Of"
                            android:textSize="14sp"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/totalLeaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="24sp"
                            android:textStyle="bold|italic"
                            android:layout_gravity="left"/>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.05"
                        android:layout_toEndOf="@+id/testMarks"
                        android:background="#D47676"
                        android:layout_gravity="center_vertical"
                        tools:ignore="NestedWeights"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.3"
                            android:text="Casual Leave"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/casualNo"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:text="03"
                            android:layout_gravity="center"
                            android:textColor="#D47676"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.05"
                        android:layout_toEndOf="@+id/testMarks"
                        android:background="#8BD476"
                        android:layout_gravity="center_vertical"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.3"
                            android:text="Sick Leave"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/casualNo"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:text="03"
                            android:layout_gravity="center"
                            android:textColor="#8BD476" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.05"
                        android:layout_toEndOf="@+id/testMarks"
                        android:background="#D4C476"
                        android:layout_gravity="center_vertical"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.3"
                            android:text="Other Leave"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/casualNo"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:text="03"
                            android:layout_gravity="center"
                            android:textColor="#D4C476"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.05"
                        android:layout_toEndOf="@+id/testMarks"
                        android:background="#76A2D4"
                        android:layout_gravity="center_vertical"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.3"
                            android:text="Total Half Day"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/casualNo"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:text="03"
                            android:layout_gravity="center"
                            android:textColor="#76A2D4"/>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.4"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewTeacherLeaves"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />


        <!--<include layout="@layout/teacherleaves_recyclerview"/>-->
        <!--<include layout="@layout/teacherleaves_recyclerview"/>-->
        <!--<include layout="@layout/teacherleaves_recyclerview"/>-->
        <!--<include layout="@layout/teacherleaves_recyclerview"/>-->

    </RelativeLayout>

</LinearLayout>