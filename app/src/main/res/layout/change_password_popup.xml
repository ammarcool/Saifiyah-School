<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/changePasswordDialog"
    android:layout_width="match_parent"
    android:background="#99706565"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Enter Your Current Password"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/currentPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg3"
            android:layout_weight="0.7"
            android:hint="Current Password"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Enter Your New Password"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg3"
            android:layout_weight="0.7"
            android:hint="Enter Your Password"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Confirm Your Password"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg3"
            android:layout_weight="0.7"
            android:hint="Re-Enter Your Password"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/changePassword_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Change Password"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:background="@drawable/greencard_bg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/cancelPassword_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/redcard_bg"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Cancel"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</LinearLayout>