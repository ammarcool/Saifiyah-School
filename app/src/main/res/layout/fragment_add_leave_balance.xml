<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teachers.LeaveBalance.addLeaveBalance"
    android:orientation="vertical"
    android:weightSum="4.6"
    android:padding="10dp"
    android:background="@drawable/blur_bg">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Leave Type"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <Spinner
            android:id="@+id/typesOfLeaves"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg2"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Date From"
                android:layout_weight="0.5"
                android:textColor="#C09863"/>

            <EditText
                android:id="@+id/leaveBalanceFromDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/my_edittext_bg2"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableRight="@drawable/date"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:inputType="date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="To Date"
                android:layout_weight="0.5"
                android:textColor="#C09863"/>

            <EditText
                android:id="@+id/leaveBalanceToDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/my_edittext_bg2"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableRight="@drawable/date"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="date"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Half Day"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <RadioGroup
            android:id="@+id/leaveBalanceHalfDay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/yesHalfDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Yes"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/noHalfDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Reason"
            android:layout_weight="0.5"
            android:textColor="#C09863"/>

        <EditText
            android:id="@+id/leaveBalanceReason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/my_edittext_bg2"
            android:layout_weight="2.5"
            android:gravity="top"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:layout_marginBottom="5dp"
        android:id="@+id/submitTeacherLeave"
        android:layout_marginTop="6dp"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="Submit Leave"
        android:textSize="20sp"
        android:layout_weight="0.5"
        android:background="@drawable/leavesubmitbutton"
        android:textColor="#C09863"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>