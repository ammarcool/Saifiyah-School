<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teachers.LeaveBalance.leaveBalance"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/leaveBalanceToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingPrefix">

    </android.support.v7.widget.Toolbar>


    <android.support.design.widget.TabLayout
        android:id="@+id/leaveBalanceTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9BF88"
        app:tabIndicatorColor="#000">

        <android.support.design.widget.TabItem
            android:id="@+id/addLeaveBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Class Test"
            tools:ignore="HardcodedText" />

        <android.support.design.widget.TabItem
            android:id="@+id/viewLeaveBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Class Test"
            tools:ignore="HardcodedText" />


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/leaveBalanceviewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>